package aplicacao;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import dominio.Pessoa;

public class Programa {

	public static void main(String[] args) {
		Pessoa p1 = new Pessoa(null, "Uilson Alves", "uilsongmail.com");
		Pessoa p2 = new Pessoa(null, "Alessandro Reinaldo", "alegmail.com");
		Pessoa p3 = new Pessoa(null, "Maria Silva", "mariagmail.com");
		Pessoa p4 = new Pessoa(null, "Regina Castro", "reginagmail.com");
		
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("aula-jpa");
		EntityManager em = emf.createEntityManager();
		
		em.getTransaction().begin();
		em.persist(p1);
		em.persist(p2);
		em.persist(p3);
		em.persist(p4);
		em.getTransaction().commit();
		
		System.out.println("Pronto!!");
		
	}
}
